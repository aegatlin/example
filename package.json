{
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write lib pages",
    "test": "jest --testPathIgnorePatterns tests",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "arrowParens": "avoid"
  },
  "hooks": {
    "pre-commit": "npm run lint && npm run format && npm run test"
  },
  "dependencies": {
    "next": "^12.1.5",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@playwright/test": "^1.21.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@types/node": "^17.0.25",
    "@types/react": "^18.0.5",
    "autoprefixer": "^10.4.4",
    "babel-loader": "^8.2.5",
    "eslint": "8.13.0",
    "eslint-config-next": "12.1.5",
    "jest": "^27.5.1",
    "postcss": "^8.4.12",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.9",
    "skooh": "^0.2.0",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.3"
  }
}
